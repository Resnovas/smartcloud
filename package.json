  "scripts": {
    "postinstall": "lerna bootstrap",
    "start": "npm run dev:run",
    "package": "gulp package",
    "test": "gulp testall",
    "dev:format-scripts": "prettier --config .prettier.json --write .",
    "dev:run": "gulp && git add . && cz",
    "v:graduate:release": "lerna version --conventional-commits --conventional-graduate=@videndum/release-mastermind",
    "v:pre": "lerna version --conventional-commits --conventional-prerelease --no-git-tag-version && npm run git",
    "lerna:git": "lerna run --no-bail git --parallel",
    "git": "git add . && git commit -m \"chore: Bump Version & Changelog\" -s && git push"
  },
  "devDependencies": {
    "fancy-log": "^1.3.3",
    "concurrently": "^6.2.0",
    "gulp": "^4.0.2",
    "gulp-exec": "^5.0.0",
    "gulp-cli": "^2.3.0",
    "gulp-copy": "^4.0.1",
    "gulp-json-config": "^2.0.3",
    "gulp-json-fmt": "^1.0.1",
    "gulp-markdown-toc": "^1.1.0",
    "gulp-rename": "^2.0.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "mdinclude": "^0.7.2",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "prettier-plugin-pkg": "^0.8.0",
    "@instructure/cz-lerna-changelog": "^8.6.0",
    "commitizen": "^4.2.4"
  },
  "private": false,
  "dependencies": {
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@instructure/cz-lerna-changelog"
    }
  }
